<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WiFi Analyzer</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navbar -->
  <div class="navbar">
    <div class="logo">
      <img src="https://img.icons8.com/ios-filled/50/ffffff/wifi--v1.png" alt="WiFi Logo">
      <span>WiFi Analyzer</span>
    </div>
    <div id="menuIcon" class="menu-icon">
      <span>&#9776;</span>
    </div>
  </div>

  <!-- Dropdown Menu -->
  <div id="dropdownMenu" class="dropdown-menu">
    <a href="/admin">Admin</a>
  </div>

  <!-- WiFi Management Dashboard -->
  <h1>WiFi Management Dashboard</h1>
  <div class="container">
    <div class="card">
      <h2>Network Status</h2>
      <p>Status: <span>Active</span></p>
      <p>Signal Strength: <span>Excellent</span></p>
      <button>Refresh Status</button>
    </div>

    <!-- QR Code Upload Form -->
    <form action="/upload-qr" method="POST" enctype="multipart/form-data" id="qr-form">
      <div class="box card upload-box" style="width: 95vw;">
        <h5 class="box-title">
          <img src="https://img.icons8.com/ios-filled/50/808080/wifi.png" alt="WiFi Icon" class="icon">
          Upload WiFi QR
        </h5>
        <p class="box-text">Scan your WiFi QR code</p>
        <label for="upload-qr" class="upload-area">
          <img src="https://img.icons8.com/ios-filled/100/808080/wifi.png" alt="WiFi Icon" class="upload-icon">
          <input type="file" id="upload-qr" name="qrCode" class="file-input" accept="image/*" onchange="submitForm()">
        </label>
      </div>
    </form>

    <div class="card" style="margin-bottom: 100px;">
      <h5 class="box-title">
        <img src="https://img.icons8.com/ios-filled/50/808080/conference-call.png" alt="Connected Users Icon" class="icon">
        Connected Users
      </h5>
      <p class="box-text">Manage network access</p>
      <button class="btn-block">
        <img src="https://img.icons8.com/ios-filled/50/ffffff/shield.png" alt="Shield Icon" class="icon-btn">
        Block Users
      </button>
    </div>
  </div>

  <!-- Footer -->
  <div class="footer text-center">
    <p>&copy; 2025 WiFi Analyzer. All rights reserved.</p>
  </div>

  <script>
    const menuIcon = document.getElementById("menuIcon");
    const dropdownMenu = document.getElementById("dropdownMenu");

    menuIcon.addEventListener("click", () => {
      dropdownMenu.classList.toggle("show");
    });

    window.addEventListener("click", (event) => {
      if (!menuIcon.contains(event.target) && !dropdownMenu.contains(event.target)) {
        dropdownMenu.classList.remove("show");
      }
    });

    // Automatically submit the form when a file is selected
    function submitForm() {
      document.getElementById("qr-form").submit();
    }
  </script>

</body>
</html>
